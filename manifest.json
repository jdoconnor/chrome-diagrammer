{
  "name": "Chrome Diagrammer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use code blocks in markdown to render common js graphs",
  "homepage_url": "https://www.github.com/jdoconnor",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.github.com/lumoslabs/*"
      ],
      "js": [
        "js/raphael/raphael.min.js",
        "js/flowchart/flowchart.min.js",
        "js/mermaid/mermaid.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}
